<view class="my-starts">
<view class="start-list">
  <view class="item">
    <image wx:if="{{value >= 1}}" src="/static/images/pic_star_full.png"></image>
    <image wx:elif="{{value <= 0}}" src="/static/images/pic_star_blank.png"></image>
    <image wx:else src="/static/images/pic_star_half.png"></image>
  </view>
  <view class="item">
    <image wx:if="{{value >= 2}}" src="/static/images/pic_star_full.png"></image>
    <image wx:elif="{{value <= 1}}" src="/static/images/pic_star_blank.png"></image>
    <image wx:else src="/static/images/pic_star_half.png"></image>
  </view>
  <view class="item">
    <image wx:if="{{value >= 3}}" src="/static/images/pic_star_full.png"></image>
    <image wx:elif="{{value <= 2}}" src="/static/images/pic_star_blank.png"></image>
    <image wx:else src="/static/images/pic_star_half.png"></image>
  </view>
  <view class="item">
    <image wx:if="{{value >= 4}}" src="/static/images/pic_star_full.png"></image>
    <image wx:elif="{{value <= 3}}" src="/static/images/pic_star_blank.png"></image>
    <image wx:else src="/static/images/pic_star_half.png"></image>
  </view>
  <view class="item">
    <image wx:if="{{value >= 5}}" src="/static/images/pic_star_full.png"></image>
    <image wx:elif="{{value <= 4}}" src="/static/images/pic_star_blank.png"></image>
    <image wx:else src="/static/images/pic_star_half.png"></image>
  </view>
</view>
