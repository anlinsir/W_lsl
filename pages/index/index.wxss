/**index.wxss**/

page {
  background-color: rgba(248, 246, 255, 1);
}

.position-add-btn {
  position: fixed;
  z-index: 2000;
  bottom: 50rpx;
  right: 50rpx;
  width: 100rpx;
  height: 100rpx;
}

.position-add-btn image{
  height: 100%;
  width: 100%;
   height:150%;
   width:150%;
}

.position-add-btn.hover image{
  opacity: 1;
}

.top {
  height: 250rpx;
  position: relative;
  margin-bottom: 300rpx;
  background:linear-gradient(-38deg,rgba(81,118,237,1),rgba(52,77,226,1));
  background: #F46C3D;
}

.tips-bar {
  z-index:1002;
  position:absolute;
  top:140rpx;
  left:204rpx;
  right:204rpx;
  height:72rpx;
  line-height: 72rpx;
  background:rgba(255,255,255,0.2);
  border-radius:34rpx;
  box-shadow:0rpx 5rpx 20rpx 0rpx rgba(179,196,211,0.27);
  font-size:30rpx;
  color:rgba(255,255,255,1);
  text-align: center;
}

.search-bar {
  z-index:1002;
  position:absolute;
  top:30rpx;
  left:24rpx;
  right:24rpx;
  width:702rpx;
  height:80rpx;
  background:rgba(255,255,255,1);
  border-radius:36rpx;
  box-shadow:0rpx 5rpx 20rpx 0rpx rgba(179,196,211,0.27);
  display: flex;

}
.acht_part{
  width:702rpx;
  height:370rpx;
  background:rgba(255,255,255,1);
  border-radius:20rpx;
  left: 24rpx;
  position: absolute;
  bottom:-256rpx;
  display: flex;
  box-sizing: border-box;
  padding: 33rpx 10rpx;   
  flex-wrap: wrap;
}
.acht_part > view{
  width: 20%;
  height: 172rpx;
  text-align: center;
}
.acht_part text {
  font-size:26rpx;
  color:rgba(102,102,102,1);
  display: inline-block;
  transform: translateY(0rpx);
}



.i-index {
 width:702rpx;
  height:663rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 0px 0px 0px rgba(153,155,159,0.12);
  margin-left: 24rpx;
  border-radius:20rpx;
  margin-bottom: 28rpx;
}

.i-index scroll-view {
  width: 33.33%;
  height: 100%;
  float:left;
  background: #fff;
}

.i-index scroll-view .item {
  font-size:30rpx;
  color:rgba(83,90,106,1);
  padding: 20rpx 0;
  text-align: center;

  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.i-index scroll-view .item.active {
  color:rgba(80,147,255,1);
}
.search-bar .location-tool {
  position:relative;z-index: 10;
  padding-left:36rpx;
  height:80rpx;
  line-height:80rpx;  
  font-size:28rpx;
  color:rgba(100,111,138,1);
  float: left;
}

.search-bar .location-tool text {
  border-right: 1rpx solid #eaeaea;
  padding-right: 30rpx;
}

.search-bar .location-tool image {
  width: 20rpx;
  height: 28rpx;
  margin-right: 6rpx;
  position:relative;
  top:4rpx;
}

.location-tool-hover {
  color:rgb(197, 201, 214)!important;
}

.search-bar .search-pen {
  position:relative;z-index: 9;
  left:20rpx;
  right:0;
  height:80rpx;
  font-size:28rpx;
  color:rgba(196,197,212,1);
  line-height:80rpx;
  text-align:center;
}

.search-bar .search-pen image {
  width: 26rpx;
  height: 26rpx;
  margin-right: 11rpx;
  position:relative;
  top:3rpx;
}

.search-pen-hover {
  color:rgb(228, 230, 235)!important;
}

.position {
  margin-bottom: 25rpx!important;
}

.none-data {
  margin-top: 50rpx;
  /* position: absolute; */
  top: 50%;
  left: 0;right: 0;
  text-align: center;
  /* transform: translateY(-50%); */
}

.none-data .tips {
  font-size:26rpx;
  font-weight:400;
  color:#aaa;
}

.none-data image {
  width: 185rpx;
  height: 128rpx; 
}