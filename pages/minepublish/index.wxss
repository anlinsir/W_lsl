/* pages/minepublish/index.wxss */

page {
  background-color: #f5f5f5;
}

.list {
  padding-top: 40rpx;
}

.position {
  margin-bottom: 21rpx!important;
}

.none-data {
  position: absolute;
  top:400rpx;
  left: 0;right: 0;
  text-align: center;
  transform: translateY(-50%);

}
.fabu{
  width:410rpx;
  height:80rpx;
  background:linear-gradient(90deg,rgba(241,96,51,1),rgba(255,147,94,1));
  box-shadow:0px 0px px 0px rgba(232,45,90,0.35);   
  border-radius:40rpx;
  font-size:30rpx;
  color:#fff;
  margin-top: 50rpx;
}

.none-data .tips {
  font-size:30rpx;
  font-weight:400;
  color:rgba(102,102,102,1);
  margin: 50rpx 0;  
  margin-bottom: 60rpx;
}

.none-data image {
  width: 185rpx;
  height: 128rpx; 
  transform: translateX(-10rpx);
}


/* 自定义选项 */
.options {
  background-color: #fff;
  margin-top: 20rpx;
  font-size:30rpx;
}

.options .item {
  margin: 0 34rpx;
  height: 110rpx;
  line-height:110rpx;
}

.options .item.hover {
  opacity: 0.75;
}

.options .item .title {
  float: left;
  position: relative;
  color: #535A6A;
}

.options .item .footer {
  float: right;
  position: relative;
  height: 100%;
}

.day-price {
  font-size:30rpx;
  color:rgba(93,140,248,1);
}

.day-price.old {
  color:rgba(164,165,171,1);
  text-decoration: line-through;
}