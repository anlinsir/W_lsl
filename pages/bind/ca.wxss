/**index.wxss**/

page {
  background-color: #white;
}

.title {
  font-size:38rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(34,34,34,1);
  margin-left: 71rpx;
  margin-top: 145rpx;
}

.input-bar{
  margin-top: 71rpx;
  margin-left: 47rpx;
  width: 604rpx;
  height: 52rpx;
  padding: 18rpx 19rpx 18rpx 33rpx;
  background:rgba(245,246,245,1);
  border-radius:43rpx;
  font-size:30rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(34,34,34,1);
  position: relative;
}
.input-bar .sanjiao{
  position: absolute;
  border:10rpx solid rgba(209,209,209,1);
  border-top: 10rpx solid rgba(209,209,209,1);
  border-left: 10rpx solid transparent;
  border-right: 10rpx solid transparent;
  border-bottom: 10rpx solid transparent;
  top:39rpx;
  left:113rpx;
}
.next{
  width:134rpx !important;
  height:102rpx !important;
  float:right;
  transform: translateY(-19rpx) translateX(10rpx);
}

.code{
  display: inline-block;
  position: relative;
  vertical-align: middle;
  bottom: 16rpx;
  transform: translateY(14rpx);
}
.code image{
  position: relative;
  bottom: 5rpx;
  width: 16rpx;
  height: 10rpx;
}
.input-bar text{
  position: relative;
  bottom: 13rpx;
  color:rgba(209,209,209,1);
  font-size: 40rpx;
  margin-left: 24rpx;
}
.lines{
  display: inline-block;
  vertical-align: middle;
  transform: translateY(9rpx);
}

input{
  display: inline-block;
  margin-left: 42rpx;
  width: 300rpx;
  height:52rpx;
  line-height: 52rpx;
  vertical-align: middle;
}

.select{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 842rpx;
  z-index:10;
  background-color: rgba(255,255,255,1);
  box-shadow:0px -4rpx 30rpx 0px rgba(0, 0, 0, 0.04);
  opacity:0.97;
  border-radius:20rpx 20rpx 0px 0px;
}

.select-title{
  height: 78rpx;
  line-height: 78rpx;
  text-align: center;
}

.select .close{
  display: inline-block;
  width: 60rpx;
  height: 10rpx;
  border-bottom: 4rpx solid rgba(229,229,229,1);
  border-top: 4rpx solid rgba(229,229,229,1);
  border-radius:2rpx;
}

.select-content{
  width: 100%;
  height: 90rpx;
  padding-left:44rpx;
  line-height: 90rpx;
  font-size:30rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(34,34,34,1);
}

.select-content image{
  margin-right:28rpx;
}

.select-content:nth-child(2){
  background-color: rgba(249,249,249,1);
}

.flag{
  width: 37rpx;
  height: 27rpx;
}



