/**index.wxss**/

page {
  background-color: white;
}

.title {
  font-size: 38rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(34, 34, 34, 1);
  margin-left: 44rpx;
  margin-top: 100rpx;
}
.tips{
  font-size:32rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(51,51,51,1);
  margin-left: 44rpx;
  margin-top: 39rpx;
}
.country{
  position: fixed;
  bottom: 526rpx;
  left:188rpx;
  text-align: center;
  margin-top: 213rpx;
}
.box{
  padding: 0 50rpx;
  padding-right: 70rpx;
  display: inline-block;
  height: 80rpx;
  border:1px solid rgba(255, 114, 65, 1);
  box-shadow:0px 5px 30px 0px rgba(255,114,65,0.2);
  border-radius: 39rpx;
  line-height: 80rpx;
  position: relative;
}
.box::after{
  content: '';
  position: absolute;
  border:15rpx solid rgba(255, 114, 65, 1);
  border-left: 15rpx solid transparent;
  border-right: 15rpx solid transparent;
  border-top: 15rpx solid rgba(255, 114, 65, 1);
  border-bottom: 15rpx solid transparent;
  top: 80rpx;
  left: 50%;
  transform:translateX(-50%);
}
.box::before{
  content: '';
  position: absolute;
  border: 12rpx solid #fff;
  border-left: 12rpx solid transparent;
  border-right: 12rpx solid transparent;
  border-top: 12rpx solid #fff;
  border-bottom: 12rpx solid transparent;
  z-index: 2;
  top: 80rpx;
  left: 50%;
  transform:translateX(-50%);
}
.sanjiao{
  position: absolute;
  top:30rpx;
  right: 20rpx;
  border:12rpx solid rgba(255,114,65,1);
  border-left: 12rpx solid rgba(255,114,65,1);
  border-right: 12rpx solid transparent;
  border-top: 12rpx solid transparent;
  border-bottom: 12rpx solid transparent;
}
.flag{
  width: 37rpx;
  height: 27rpx;
}
.name{
  font-size:30rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(51,51,51,1);
  margin-left: 10rpx;
}
.triangle{
  width:14rpx;
  height: 20rpx;
  margin-left: 30rpx;
}

.address{
  text-align: center;
  margin-top: 37rpx;
}
.address image{
  width: 94rpx;
  height: 126rpx;
}
.map{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 616rpx;
}
.select{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 842rpx;
  z-index:10;
  background-color: rgba(255,255,255,1);
  box-shadow:0px -4rpx 30rpx 0px rgba(0, 0, 0, 0.04);
  opacity:0.97;
  border-radius:20rpx 20rpx 0px 0px;
}

.select-title{
  height: 78rpx;
  line-height: 78rpx;
  text-align: center;
}

.select .close{
  display: inline-block;
  width: 60rpx;
  height: 10rpx;
  border-bottom: 4rpx solid rgba(229,229,229,1);
  border-top: 4rpx solid rgba(229,229,229,1);
  border-radius:2rpx;
}

.select-content{
  width: 100%;
  height: 90rpx;
  padding-left:44rpx;
  line-height: 90rpx;
  font-size:30rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(34,34,34,1);
}

.select-content image{
  margin-right:28rpx;
}

.select-content:nth-child(2){
  background-color: rgba(249,249,249,1);
}

.confirm-btn{
  position: fixed;
  bottom: 67rpx;
  left: 52rpx;
  width:640rpx;
  height:100rpx;
  background:linear-gradient(270deg,rgba(241,96,51,1),rgba(255,147,94,1));
  box-shadow:0px 5px 30px 0px rgba(232,90,45,0.4);
  border-radius:50rpx;
  text-align: center;
  line-height: 100rpx;
  font-size:34rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(255,255,255,1);
}

