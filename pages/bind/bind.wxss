/**index.wxss**/

page {
  background-color: #white;
}
.title {
  font-size:38rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(34,34,34,1);
  margin-left: 71rpx;
  margin-top: 145rpx;
}

.input-bar{
  margin-top: 71rpx;
  margin-left: 47rpx;
  width: 604rpx;
  height: 52rpx;
  padding: 18rpx 19rpx 18rpx 33rpx;
  background:rgba(245,246,245,1);
  border-radius:43rpx;
  font-size:30rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(34,34,34,1);
}
input{
  width: 400rpx;
}

.time{
  position: relative;
  bottom: 50rpx;
  display: inline-block;
  width:160rpx;
  height:52rpx;
  border-radius:26rpx;
  float:right;
  text-align:center;
  line-height: 52rpx;
  font-size:26rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
}

.sended{
  background:rgba(255,255,255,1);
  box-shadow:0px 5rpx 30rpx 0px rgba(219,219,219,0.4);
  color:rgba(34,34,34,1);
}
.send{
  background:linear-gradient(270deg,rgba(241,96,51,1),rgba(255,147,94,1));
  box-shadow:0px 5px 30px 0px rgba(232,90,45,0.4);
  color:rgba(255,255,255,1);
}
.error{
  margin-left: 71rpx;
  font-size:26rpx;
  font-family:PingFang-SC-Medium;
  font-weight:500;
  color:rgba(243,59,59,1);
  margin-top: 27rpx;
}
.error image{
  width: 26rpx;
  height: 26rpx;
  margin-right: 15rpx;
}


